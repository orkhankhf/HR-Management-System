<html lang="en">
<!--<![endif]-->
<!-- BEGIN HEAD -->
<head>
	<meta charset="utf-8" />
	<title> HRM | Login </title>
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta content="width=device-width, initial-scale=1.0" name="viewport" />
	<meta http-equiv="Content-type" content="text/html; charset=utf-8">

	<!-- BEGIN  STYLES -->
	<link media="all" type="text/css" rel="stylesheet" href="http://froiden.cloudapp.net/hrm_demo/assets/global/plugins/font-awesome/css/font-awesome.min.css">

	<link media="all" type="text/css" rel="stylesheet" href="http://froiden.cloudapp.net/hrm_demo/assets/global/plugins/bootstrap/css/bootstrap.min.css">

	<link media="all" type="text/css" rel="stylesheet" href="http://froiden.cloudapp.net/hrm_demo/assets/admin/pages/css/login-soft.css">

	<link media="all" type="text/css" rel="stylesheet" href="http://froiden.cloudapp.net/hrm_demo/assets/global/css/components.css">

	<link media="all" type="text/css" rel="stylesheet" href="http://froiden.cloudapp.net/hrm_demo/assets/admin/layout/css/layout.css">

	<link media="all" type="text/css" rel="stylesheet" href="http://froiden.cloudapp.net/hrm_demo/assets/admin/layout/css/themes/darkblue.css">

	<!-- END STYLES -->

	<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

</head>
<!-- END HEAD -->
<!-- BEGIN BODY -->
<body class="login">
	<a style="color:#FFFFFF" href="@Url.Action("Login", "Employees", new { Area = ""})">
		<div class="btn green pull-right" style="margin-top: -59px;margin-right: 184px;">

			<i class="fa fa-user"></i> Go to Employee Panel <i class="icon-arrow-left"></i>

		</div>
	</a>
	<!-- BEGIN LOGO -->
	<div class="logo">
		<a href="javacript:;">
			<img src="http://froiden.cloudapp.net/hrm_demo/assets/admin/layout/img/logo-big.png" class="logo-default" height="30px" width="117px" alt="Logo">
		</a>
	</div>
	<!-- END LOGO -->
	<!-- BEGIN SIDEBAR TOGGLER BUTTON -->
	<div class="menu-toggler sidebar-toggler">
	</div>
	<!-- END SIDEBAR TOGGLER BUTTON -->
	<!-- BEGIN LOGIN -->
	<div class="content">

		<!-- BEGIN LOGIN FORM -->
		@using (Ajax.BeginForm("Index", "Login", new AjaxOptions { HttpMethod = "POST", OnSuccess = "showResult", OnFailure="showError" }, new { @class = "login-form" }))
        {
			<h3 class="form-title">Login to your account</h3>
			<div id="alert">

			</div>
			<div class="form-group">
				<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
				<label class="control-label visible-ie8 visible-ie9">Email</label>
				<div class="input-icon">
					<i class="fa fa-user"></i>
					<input class="form-control placeholder-no-fix" type="email" autocomplete="off" placeholder="Email" name="admin_email" value="samir@code.edu.az" />
				</div>
			</div>
			<div class="form-group">
				<label class="control-label visible-ie8 visible-ie9">Password</label>
				<div class="input-icon">
					<i class="fa fa-lock"></i>
					<input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" name="admin_password" value="123456" />
				</div>
			</div>
			<div class="form-group">
				<p>Username:<strong>samir@code.edu.az</strong></p>
				<p>Password:<strong>123456</strong></p>
			</div>
			<div class="form-actions">
				<button type="submit" class="btn blue pull-right" id="submitbutton">
					Login <i class="m-icon-swapright m-icon-white"></i>
				</button>
			</div>
		}
        <script>
            function showResult(data) {
				if(data.errorMessage){
					$("#alert").html(data.errorMessage);
				} else {
					window.location.href = data.url;
				}
            }
            function showError() {
                alert("Sistemdə xəta baş verdi! Zəhmət olmasa Server, Məlumat bazası və sorğunun getdiyi faylı yoxlayın.")
            }
		</script>
		<!-- END LOGIN FORM -->


	</div>
	<!-- END LOGIN -->
	<!-- BEGIN COPYRIGHT -->
	<div class="copyright">
		2018 &copy; HRM
	</div>
	<!-- END COPYRIGHT -->
	<!-- BEGIN JAVASCRIPTS(Load javascripts at bottom, this will reduce page load time) -->
	<!-- BEGIN CORE PLUGINS -->
	<!--[if lt IE 9]>
	<script src="http://froiden.cloudapp.net/hrm_demo/assets/global/plugins/respond.min.js"></script>

	<script src="http://froiden.cloudapp.net/hrm_demo/assets/global/plugins/excanvas.min.js"></script>

	<![endif]-->
	<script src="http://froiden.cloudapp.net/hrm_demo/assets/global/plugins/jquery.min.js"></script>

	<script src="http://froiden.cloudapp.net/hrm_demo/assets/global/plugins/bootstrap/js/bootstrap.min.js"></script>

	<script src="http://froiden.cloudapp.net/hrm_demo/assets/global/plugins/backstretch/jquery.backstretch.min.js"></script>

	<script src="http://froiden.cloudapp.net/hrm_demo/assets/global/scripts/metronic.js"></script>

	<script src="http://froiden.cloudapp.net/hrm_demo/assets/admin/layout/scripts/demo.js"></script>


	<!-- END PAGE LEVEL SCRIPTS -->

	<script>
		jQuery(document).ready(function () {
			Metronic.init(); // init metronic core components

			// init background slide images
			$.backstretch([
				"http://froiden.cloudapp.net/hrm_demo/assets/admin/pages/media/bg/1.jpg",
				"http://froiden.cloudapp.net/hrm_demo/assets/admin/pages/media/bg/2.jpg",
				"http://froiden.cloudapp.net/hrm_demo/assets/admin/pages/media/bg/3.jpg",
				"http://froiden.cloudapp.net/hrm_demo/assets/admin/pages/media/bg/4.jpg"
			], {
					fade: 1000,
					duration: 8000
				}
			);
		});
	</script>


	@Scripts.Render("~/bundles/jquery-unobtrusive");
	<!-- END JAVASCRIPTS -->
</body>
<!-- END BODY -->
</html>