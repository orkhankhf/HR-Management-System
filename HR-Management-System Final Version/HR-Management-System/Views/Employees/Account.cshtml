				<div class="panel panel-profile margin-top-20">
					<div class="panel-heading overflow-h">
						<h2 class="panel-title heading-sm pull-left"><i class="fa fa-send"></i> Holidays</h2>
					</div>
					<div id="scrollbar3" class="panel-body contentHolder">
						@{
							List<string> holidayColors = new List<string>()
										{
											"color-blue",
											"color-red",
											"color-green",
											"color-yellow",
											"color-dark"
										};
							List<string> holidayBoxColors = new List<string>()
										{
											"alert-blocks-info",
											"alert-blocks-error",
											"alert-blocks-success",
											"alert-blocks-pending",
											"alert-blocks-"
										};
							int ColorIndex = 0;
							foreach (var item in Model.Holiday.OrderByDescending(h => h.holiday_date))
							{
								if (ColorIndex == holidayColors.Count)
								{
									ColorIndex = 0;
								}
								<div class="alert-blocks @holidayBoxColors[ColorIndex]">
									<div class="overflow-h">
										<strong class="@holidayColors[ColorIndex]">
											@item.holiday_name
											<small class="pull-right"><em>@Convert.ToDateTime(item.holiday_date).ToShortDateString()</em></small>
										</strong>
									</div>
								</div>
								ColorIndex++;
							}
						}
					</div>
				</div>

				<div class="panel panel-profile margin-top-20">
					<div class="panel-heading overflow-h">
						<h2 class="panel-title heading-sm pull-left"><i class="fa fa-trophy"></i> Awards</h2>
					</div>
					<div id="scrollbar3" class="panel-body contentHolder">
